#:kivy 1.0
<QuantButton>:
	canvas:
		Color:
			rgba:root.color
		Rectangle:
			size: root.size
			pos: root.pos
		Color:
			rgba:[0,0,0,1]
		Line:
			rectangle:[root.x+1,root.y+1,root.width-1,root.height-1]
	Label:
		pos: root.pos
		size: root.size
		text: root.text

<Knob>:
	canvas.before:
		Color:
			rgb:[0,0.2,0.4]
		Line:
			cap:'none'
			width:5
			circle:[root.center[0],root.center[1],min(root.width/2,root.height/2)]
		Color:
			rgb:[0.2,0.4,0]
		Line:
			cap:'none'
			width:9
			circle:[root.center[0],root.center[1],min(root.width/2,root.height/2),0,float(root.value - root.min)/root.max*360]

<ListEntry2>:
	canvas.after:
		Color:
			rgb:[0.7,0.4,0.4]
		Line:
			cap:'none'
			width:1
			rectangle:[root.pos[0]+3,root.pos[1]+3,root.width-6,root.height-4]

<ListEntry>:
	canvas.after:
		Color:
			rgb:[0.7,0.6,0.4]
		Line:
			cap:'none'
			width:1
			rectangle:[root.pos[0]+3,root.pos[1]+3,root.width-6,root.height-4]

<MainView>:
    #bv:bv
    orientation:'vertical'
    ActionBar:
        #pos_hint: {'top':1}
        on_previous:print("blalkfjljadfb")#root.bv.show_first_level()
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Quantify Myself'
                with_previous: False
            ActionOverflow:
            ActionButton:
                text: 'Home'
                on_press:root.show_home_view()
            ActionButton:
                text: 'Show rstLog'
                on_press:root.list_log3_rst()
            ActionButton:
                text: 'Show Log'
                on_press:root.list_log2()
            ActionButton:
                text: 'Save'
                on_press:app.save()
            ActionButton:
                text: 'List Log'
                on_press:root.list_log_txt()
            ActionButton:
                text: 'Paint Log'
                on_press:root.paint_log()
            ActionButton:
                text: 'Paint big Log'
                on_press:root.paint_log_scroll()
            ActionButton:
                text: 'Export all'
                on_press:root.export_all()
            ActionButton:
                text: 'Import all'
                on_press:root.import_all()


<CustomSlider>:
    sl:sl
    orientation:'horizontal'
    Label:
        size_hint_x:0.15
        text:root.ltext
    Label:
        size_hint_x:0.15
        text:str(sl.value)
    Slider:
        id:sl
        min:root.min
        max:root.max
        value:root.value
        on_value:root.change_value(self.value)
        #on_touch_down:root.test()

<CustomKnob>:
    sl:sl
    orientation:'horizontal'
    Label:
        size_hint_x:0.65
        text:root.ltext
        text_size:self.size
        valign:'middle'
#    Label:
#        size_hint_x:0.15
#        text:str(sl.value)
    Knob:
        id:sl
        min:root.min
        max:root.max
        value:root.value
        on_value:root.change_value(self.value)
        #on_touch_down:root.test()

